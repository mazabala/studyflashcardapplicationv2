// lib/core/ui/widgets/subscription/subscription_expired_widget.dart
import 'package:flutter/material.dart';

class SubscriptionExpiredWidget extends StatelessWidget {
  final VoidCallback onSubscribePressed;

  const SubscriptionExpiredWidget({Key? key, required this.onSubscribePressed}) : super(key: key);

  @override
  Widget build(BuildContext context) {
    return Scaffold(
      appBar: AppBar(title: const Text('Subscription Expired')),
      body: Center(
        child: Column(
          mainAxisAlignment: MainAxisAlignment.center,
          children: [
            const Text(
              'Your subscription has expired.',
              style: TextStyle(fontSize: 24),
            ),
            const SizedBox(height: 20),
            ElevatedButton(
              onPressed: onSubscribePressed,
              child: const Text('Renew Subscription'),
            ),
          ],
        ),
      ),
    );
  }
}
